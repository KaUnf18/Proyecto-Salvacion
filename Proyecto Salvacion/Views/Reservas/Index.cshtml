@model IEnumerable<Proyecto_Salvacion.Models.Reserva>

@{
    Layout = "_Layout";
}
<h2>Lista de Reservas</h2>
<a asp-action="Create" class="btn btn-primary">Agregar Reserva</a>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Fecha de Reserva</th>
            <th>Pago Adelantado</th>
            <th>Pago Total</th>
            <th>Confirmado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClienteNombre</td>
                <td>@item.FechaReserva.ToShortDateString()</td>
                <td>@item.PagoAdelantado.ToString("C")</td>
                <td>@item.PagoTotal.ToString("C")</td>
                <td>@item.Confirmado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
