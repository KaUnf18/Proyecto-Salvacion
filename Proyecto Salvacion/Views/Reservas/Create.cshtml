@model Reserva

<h2>Agregar Reserva</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Nombre del Cliente</label>
        <input asp-for="ClienteNombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Correo del Cliente</label>
        <input asp-for="ClienteCorreo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fecha de Reserva</label>
        <input asp-for="FechaReserva" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Pago Adelantado</label>
        <input asp-for="PagoAdelantado" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
