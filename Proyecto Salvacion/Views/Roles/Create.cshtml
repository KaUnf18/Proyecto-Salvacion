@model Proyecto_Salvacion.Models.Rol


<h2>Agregar Rol</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label">Nombre del Rol</label>
        <input asp-for="Nombre" class="form-control" placeholder="Ej. Administrador" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" placeholder="Descripción del rol" required></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
